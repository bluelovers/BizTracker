<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="auto"
    package="com.xiaolei.android.BizTracker"
    android:versionCode="27"
    android:versionName="1.2.7" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    </uses-permission>

    <application
        android:icon="@drawable/ico"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name=".BizTracker"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.xiaolei.android.ui.FunctionTypes" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.TransactionList" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.TransactionListWeekly" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.TransactionListMonthly" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.TransactionListDaily" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.TransactionListYearly" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.Config" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.CurrencySettings" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.ProjectManager" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.DailyTransactionList" >
        </activity>
        <activity
            android:name="com.xiaolei.android.ui.TransactionSearchResult"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.PhotoViewer" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.ControlPanel" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.TransactionDetails" >
        </activity>
        <activity android:name="com.xiaolei.android.ui.Settings" >
        </activity>
    </application>

</manifest>