<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<EditText android:id="@+id/editTextPassword"
		android:singleLine="true" android:maxLines="1" android:layout_gravity="center"
		android:layout_width="200dip" android:hint="@string/password_hint"
		android:password="true" android:layout_margin="10dip"
		android:maxLength="6" android:layout_height="wrap_content"></EditText>
	<TextView android:visibility="invisible" android:textColor="#ff6600"
		android:layout_marginBottom="10dip" android:layout_width="wrap_content"
		android:layout_gravity="center_horizontal" android:text="TextView"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:id="@+id/textViewVerifyResult" android:layout_height="wrap_content"></TextView>
	<LinearLayout android:padding="5dip" android:layout_width="fill_parent"
		android:background="@android:drawable/bottom_bar"
		android:layout_height="wrap_content">
		<Button android:text="@android:string/ok" android:id="@+id/buttonInputPasswordOk"
			android:layout_weight="1" android:layout_width="0dip"
			android:layout_height="wrap_content"></Button>
		<Button android:text="@android:string/cancel" android:id="@+id/buttonInputPasswordCancel"
			android:layout_weight="1" android:layout_width="0dip"
			android:layout_height="wrap_content"></Button>
	</LinearLayout>
</LinearLayout>

