<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.5"
    android:background="#4c4c4c"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#686868" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:id="@+id/textViewStuffName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Stuff Name Here"
            android:textColor="#33b4e4"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTransactionCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="-20 CNY"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewTransactionComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="This is the comment. The quick brown fox jump up the lazy dog."
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="4dip"
        android:layout_marginTop="4dip"
        android:background="@drawable/btn_flat"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_menu_myplaces"
        android:drawablePadding="3dip"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:text="@string/use_my_location"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewTransactionTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="10dip"
        android:text="12/30/2011"
        android:textSize="10sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#686868" />

</LinearLayout>