<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<include layout="@layout/title_bar_without_buttons" />
	<ViewSwitcher android:id="@+id/viewSwitcherMain"
		android:layout_weight="1" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<RelativeLayout android:id="@+id/relativeLayoutBusy"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<LinearLayout android:layout_centerInParent="true"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:id="@+id/linearLayoutBusyContainer">
				<ProgressBar android:id="@+id/progressBar1"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></ProgressBar>
				<TextView android:text="@string/loading"
					android:layout_marginLeft="5dip" android:layout_gravity="center"
					android:layout_width="wrap_content" android:gravity="center"
					android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
					android:id="@+id/textViewBusy"></TextView>
			</LinearLayout>
		</RelativeLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_height="fill_parent" android:layout_width="fill_parent"
			android:id="@+id/linearLayoutData">
			<ListView android:id="@+id/listViewData"
				android:layout_height="fill_parent" android:layout_width="fill_parent"></ListView>
		</LinearLayout>
	</ViewSwitcher>

</LinearLayout>
